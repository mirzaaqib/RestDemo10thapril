<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="Signup"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fd"
            app:fontFamily="sans-serif-black" />

        <EditText
            android:id="@+id/user_sname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-thin"
            android:hint=" Name(Nick name)"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:id="@+id/email_address"
            android:hint="Type your Email"
            android:fontFamily="sans-serif-thin"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorAccent"
            android:textColor="#000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:id="@+id/mobile_no"
            android:hint=" Mobile number"
            android:maxLength="9"
            android:fontFamily="sans-serif-thin"
            android:inputType="phone"
            android:textColorHint="@color/colorAccent"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:id="@+id/user_password"
            android:hint=" Enter Password"
            android:fontFamily="sans-serif-thin"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            android:textColor="#000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_lock_open_black_24dp"
            android:id="@+id/reenter_user_password"
            android:hint=" Re-enter Password"
            android:fontFamily="sans-serif-thin"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            android:textColor="#000"/>


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree to terms and Conditions"
            android:layout_marginRight="10dp"
            android:id="@+id/termscondition"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-thin"
            android:textColor="#000000"
            android:buttonTint="#660F3F"
            android:checked="true"/>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Forget Password ?"-->
        <!--android:layout_gravity="center"-->
        <!--android:textAlignment="center"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_marginTop="0dp"-->
        <!--android:textColor="#000000"-->
        <!--android:fontFamily="sans-serif-thin"-->
        <!--android:drawablePadding="6dp"-->
        <!--android:padding="4dp"/>-->


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/user_register"
            android:textColor="@color/white"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/userlogin"/>


    </LinearLayout>


</ScrollView>